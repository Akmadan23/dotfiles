[core]
    ; pager = diff-so-fancy | bat
    pager = diff-so-fancy | less --tabs=4 -RFX
    ; pager = diff-so-fancy | nvim -RMn -c 'set ft=diff | AnsiEsc'

[color]
    ui = true

[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[diff-so-fancy]
    first-run = true
