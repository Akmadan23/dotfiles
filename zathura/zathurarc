# Theme

set recolor true
set recolor-darkcolor		"#FFFFFF"
set recolor-lightcolor		"#242424"

set inputbar-fg				"#FFFFFF"
set inputbar-bg				"#242424"

set statusbar-bg			"#B5D5FF"
set statusbar-fg			"#242424"

set highlight-color			"#24574D"
set highlight-active-color	"#1ABC9C"

set completion-bg			"#242424"
set completion-fg			"#FFFFFF"
set completion-group-bg 	"#242424"
set completion-group-fg 	"#FFFFFF"
set completion-highlight-bg	"#1ABC9C"
set completion-highlight-fg	"#242424"

# Keys
map i recolor
map p print
map <C-Up> zoom in
map <C-Down> zoom out