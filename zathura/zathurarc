# Theme

set recolor-lightcolor      "#000000"
set recolor-darkcolor       "#EEEEEE"

set highlight-color         "#FD971F"
set highlight-active-color  "#E6DB74"

set inputbar-bg	            "#000000"
set inputbar-fg	            "#EEEEEE"

set statusbar-bg            "#66D8EF"
set statusbar-fg            "#000000"

set index-bg                "#000000"
set index-fg                "#EEEEEE"
set index-active-bg         "#E6DB74"
set index-active-fg         "#000000"

set completion-bg           "#000000"
set completion-fg           "#EEEEEE"
set completion-group-bg     "#000000"
set completion-group-fg     "#EEEEEE"
set completion-highlight-bg "#66D8EF"
set completion-highlight-fg "#000000"

set notification-error-bg   "#F92672"
set notification-error-fg   "#EEEEEE"
set notification-warning-bg "#FD971F"
set notification-warning-fg "#000000"

# Keys in normal mode
map p print
map f toggle_fullscreen
map i toggle_index
map <C-j> zoom out
map <C-k> zoom in

# Keybindings in fullscreen mode
map [fullscreen] p print
map [fullscreen] f toggle_fullscreen
map [fullscreen] i toggle_index
map [fullscreen] <C-j> zoom out
map [fullscreen] <C-k> zoom in
