# Theme

set recolor true
set recolor-darkcolor		"#FFFFFF"
set recolor-lightcolor		"#242424"

set inputbar-fg				"#FFFFFF"
set inputbar-bg				"#242424"

set statusbar-bg			"#1ABC9C"
set statusbar-fg			"#000000"

set highlight-color			"#24574D"
set highlight-active-color	"#1ABC9C"

set completion-bg			"#242424"
set completion-fg			"#FFFFFF"
set completion-group-bg 	"#242424"
set completion-group-fg 	"#FFFFFF"
set completion-highlight-bg	"#1ABC9C"
set completion-highlight-fg	"#242424"

# Keys in normal mode
map p print
map i recolor
map f toggle_fullscreen
map <C-j> zoom out
map <C-k> zoom in
map <C-i> toggle_index

# Keybindings in fullscreen mode
map [fullscreen] i recolor
map [fullscreen] p print
map [fullscreen] f toggle_fullscreen
map [fullscreen] <C-j> zoom out
map [fullscreen] <C-k> zoom in
